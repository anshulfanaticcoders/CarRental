{
    "mcpServers": {
        "sequential-thinking": {
            "command": "/home/anshul/.local/bin/uvx",
            "args": [
                "--from",
                "git+https://github.com/arben-adm/mcp-sequential-thinking",
                "--with",
                "portalocker",
                "mcp-sequential-thinking"
            ],
            "transportType": "stdio"
        },
        "chrome-devtools": {
            "command": "npx",
            "args": ["chrome-devtools-mcp@latest"]
        },
        "serena": {
            "command": "/home/anshul/.local/bin/uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server"
            ]
        },

        "linear": {
            "command": "npx",
            "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"]
        },
        "exa": {
            "type": "http",
            "url": "https://mcp.exa.ai/mcp",
            "headers": {}
        },
        "Ref": {
            "command": "npx",
            "args": ["ref-tools-mcp@latest"],
            "env": {
                "REF_API_KEY": "ref-e073988e7c23f9a980d0"
            }
        }
    }
}
